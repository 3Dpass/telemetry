{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "outDir": "build",
    "sourceMap": true,
    "moduleResolution": "node",
    "noEmitOnError": false,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    "pretty": true,
    "forceConsistentCasingInFileNames": true,
    "noErrorTruncation": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true
  },
  "typeRoots": [
    "./node_modules/@types"
  ],
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
